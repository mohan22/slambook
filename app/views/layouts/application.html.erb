<!DOCTYPE html>
<html>
<head>
  <title>Mohan's Slam Book</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav">
  <% if current_user %>
<div class="banner">
    Logged in as <%= current_user.email %>
    <%= link_to "Log out", log_out_path %></div>
  <% else %>
<div class="ban">
    <%= link_to "Sign up", sign_up_path %>
    or
    <%= link_to "Log in", log_in_path %></div>
  <% end %>
</div>


<% flash.each do |name,msg| %>
	<%= content_tag  :div, msg, :id => "flash_#{name}" %>
<% end %>
<%= yield %>

</body>
</html>
